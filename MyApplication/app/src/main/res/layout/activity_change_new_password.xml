<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rongfu.tarucplaystore.Activity.ChangeNewPasswordActivity">

    <EditText
        android:id="@+id/chgpass_password"
        android:layout_width="206dp"
        android:layout_height="47dp"
        android:ems="10"
        android:hint="Current Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="106dp"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/chgpass_newpass"
        android:layout_alignStart="@+id/chgpass_newpass" />

    <EditText
        android:id="@+id/chgpass_newpass"
        android:layout_width="208dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="New Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="184dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/chgpass_newpass2"
        android:layout_alignEnd="@+id/chgpass_newpass2" />

    <EditText
        android:id="@+id/chgpass_newpass2"
        android:layout_width="206dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="Re-type New Password"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="267dp"
        android:layout_marginBottom="181dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="61dp" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:text="Confirm" />

</RelativeLayout>
