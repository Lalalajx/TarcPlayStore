<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rongfu.tarucplaystore.Activity.EmailVerificationActivity">

    <EditText
        android:id="@+id/veriCode"
        android:layout_width="226dp"
        android:layout_height="49dp"
        android:layout_above="@+id/btn_resend"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:ems="10"
        android:hint="Verification Code"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="143dp" />

    <Button
        android:id="@+id/btn_enter2FACode"
        android:layout_width="94dp"
        android:layout_height="47dp"
        android:text="Enter"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="246dp"
        android:layout_marginStart="49dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/btn_resend" />

    <Button
        android:id="@+id/btn_resend"
        android:layout_width="125dp"
        android:layout_height="44dp"
        android:text="Resend Code"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="246dp"
        android:layout_marginStart="64dp"
        android:layout_alignTop="@+id/btn_enter2FACode"
        android:layout_alignParentStart="true" />
</RelativeLayout>
